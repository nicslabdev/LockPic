<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:paddingLeft="8dp"
         android:paddingRight="8dp"
         android:theme="@android:style/Theme.Dialog" >

	<ListView
	    android:id="@android:id/list"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
        android:layout_weight="0.9"  />
	
	
     <Button android:id="@+id/buttonAddMail"
        android:layout_width="fill_parent"
        android:text="@string/emailListAddButton"
        android:onClick="buttonAddEmailClick"
        android:layout_height="40dp"  />
 
     <Button android:id="@+id/buttonDone"
        android:layout_width="fill_parent"
        android:text="@string/emailListPositiveButton"
        android:onClick="buttonDoneClick"
        android:layout_height="40dp"  />
 </LinearLayout>